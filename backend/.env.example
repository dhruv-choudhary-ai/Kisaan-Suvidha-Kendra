# API Keys
GEMINI_API_KEY="your_gemini_api_key_here"
ELEVENLABS_API_KEY="your_elevenlabs_api_key_here"
ASSEMBLYAI_API_KEY="your_assemblyai_api_key_here"
OPENWEATHER_API_KEY="your_openweather_api_key_here"
DATA_GOV_API_KEY="your_data_gov_api_key_here"

# Database Configuration
# DB_TYPE options: "postgresql" or "sqlite" (use sqlite for testing without PostgreSQL)
DB_TYPE=sqlite
SQLITE_DB_PATH=kisaan_assist.db

# PostgreSQL Configuration (only needed if DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=kisaan_assist

# Frontend URL for CORS
# FRONTEND_ORIGIN=http://localhost:5173
FRONTEND_ORIGIN=http://localhost:3000

# ElevenLabs Voice Configuration (Hindi voice)
ELEVENLABS_VOICE_ID="pNInz6obpgDQGcFmaJgB"

# TTS Provider Configuration
# Options: "gtts" (free, for testing), "elevenlabs" (paid, better quality), or "azure" (paid, enterprise grade)
TTS_PROVIDER=azure
# TTS_PROVIDER=elevenlabs
# TTS_PROVIDER=azure

# Azure Speech Service Configuration (only needed if TTS_PROVIDER=azure)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=centralindia

# Default Settings
DEFAULT_LANGUAGE=hindi
